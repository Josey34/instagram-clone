# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/instagram_clone_dev?retryWrites=true&w=majority

# JWT Configuration (simpler for dev)
JWT_SECRET=dev-secret-key-not-for-production

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
